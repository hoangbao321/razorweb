<p>
    <a asp-page="Create" class="btn btn-primary">Tạo bài viết mới</a>
</p>
<form method="Get">
    <label for="tk">Tìm kiếm</label>
    <input name="Search" id="tk" value="@Model.Search" />
    <input type="submit" value="tìm kiếm" />
</form>

<form method="Get">
    <label>Tìm kiếm từ ngày đến ngày</label>
    <input name="StartDay" type="date" />
    <input name="EndDay" type="date" />
    <input type="submit" value="tìm kiếm" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Titile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Article)
        {
            <tr>
                <td>@item.ID</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Chỉnh sửa</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Xem</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
